{
  "name": "creative-micro-backend",
  "version": "1.0.0",
  "description": "Express.js backend for Creative Micro Inc",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc --sourceMap false",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "migrate": "ts-node src/db/migrate.ts",
    "db:setup": "ts-node src/db/setup.ts",
    "db:seed": "ts-node src/db/seed.ts",
    "migrate:prod": "node dist/db/migrate.js",
    "typecheck": "tsc --noEmit",
    "health": "curl -s http://localhost:${PORT:-3001}/health || exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
